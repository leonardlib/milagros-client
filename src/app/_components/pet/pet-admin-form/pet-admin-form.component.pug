.container.min-height-100vh
    .row.m-top-30p
        .col.s12
            h4(*ngIf="!editar") Nueva mascota
            h4(*ngIf="editar") Editar mascota
    .row.m-bottom-50p
        .col.s12
            .row
                .input-field.col.s12
                    input.validate(type="text", id="name", name="name", [(ngModel)]="pet.name",
                        #name="ngModel", required)
                    label(for="name", [class.active]="editar") Nombre
            .row
                .input-field.col.s12
                    label(for="description") Descripción
            .row
                .col.s12.m-top-30p
                    div([froalaEditor]="froalaOptions", id="description", name="description", [(ngModel)]="pet.description",
                        #description="ngModel")
            .row
                .input-field.col.s12
                    label(for="color") Color principal del pelaje
            .row
                .col.s12.m-top-30p
                    color-slider([color]="'#000000'", (onChangeComplete)="onChangeColor($event)", id="color")

//
            .row
                .col.s12
                    span.text-primary Autor de la publicación
                    ng-select([items]="authors", [addTag]="true", bindLabel="name", [(ngModel)]="post.author.name",
                    bindValue="name", [notFoundText]="'Sin autores, escribe para agregar'",
                    [loading]="loading", [addTagText]="'Agregar autor'")
            .row
                .input-field.col.s12
                    label(for="main_image") Imagen principal
            .row
                .input-field.col.s12
                    input-file([(ngModel)]="images", [fileAccept]="'image/*'", id="main_image", [fileLimit]="1")
            .row
                .col.s12
                    span.text-primary Autor de la imagen principal
                    ng-select([items]="authors", [addTag]="true", bindLabel="name", [(ngModel)]="post.main_image.author.name",
                    bindValue="name", [notFoundText]="'Sin autores, escribe para agregar'",
                    [loading]="loading", [addTagText]="'Agregar autor'")


            .row
                .col.s12.m6.m-top-50p(*ngIf="editar")
                    a.btn.btn-block.waves-effect.waves-block.grey((click)="onDelete()") Eliminar
                .col.s12.m-top-50p([class.m6]="editar")
                    a.btn.btn-block.bg-primary.waves-effect.waves-block((click)="onSubmit()") Guardar
