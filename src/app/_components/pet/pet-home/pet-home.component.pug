.container.min-height-100vh
    .row.m-top-30p
        .col.s12.m3.m-top-10p
            form
                .row(*ngIf="pets.length > 0")
                    .input-field.col.s12
                        input(type="text", id="search", [(ngModel)]="term")
                        label(for="search") Buscar mascota
                .row(*ngIf="sexs.length > 0")
                    .p.col.s12(*ngFor="let sex of sexs")
                        input.filled-in(type="checkbox", [id]="sex.name")
                        label([for]="sex.name") {{ sex.name }}
                .row(*ngIf="tastes.length > 0")
                    .col.s12
                        span.text-primary Gustos
                .row(*ngIf="tastes.length > 0")
                    .p.col.s12(*ngFor="let taste of tastes")
                        input.filled-in(type="checkbox", [id]="taste.name")
                        label([for]="taste.name") {{ taste.name }}
                .row
                    .col.s12
                        span.text-primary Edad
                .row
                    .p.col.s12
                        input.filled-in(type="checkbox", id="1")
                        label(for="1") 1 año(s)
                    .p.col.s12
                        input.filled-in(type="checkbox", id="2")
                        label(for="2") 2 año(s)
                .row
                    .col.s12
                        span.text-primary Tamaño
                .row
                    .p.col.s12
                        input.filled-in(type="checkbox", id="grande")
                        label(for="grande") Grande
                    .p.col.s12
                        input.filled-in(type="checkbox", id="mediano")
                        label(for="mediano") Mediano
                .row
                    .col.s12
                        span.text-primary Tipo de pelo
                .row
                    .p.col.s12
                        input.filled-in(type="checkbox", id="pelo1")
                        label(for="pelo1") Rizado
                    .p.col.s12
                        input.filled-in(type="checkbox", id="pelo2")
                        label(for="pelo2") Corto
                .row
                    .col.s12
                        span.text-primary Color
                .row
                    .col.s12
                        .col.s3.h-50p.black.m-2p.cursor-pointer()
        .col.s12.m9
            .row
                .col.s12.m6.m-top-10p(*ngFor="let pet of pets | filter: term")
                    .card
                        .card-image
                            img([src]="pet.images[0].url")
                            a.btn-floating.halfway-fab.waves-effect.waves-light.bg-primary(
                                [routerLink]="['/pet/characteristics/' + pet.uid]")
                                i.fa.fa-home
